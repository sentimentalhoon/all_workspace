# Development Dockerfile for Campstation Backend

FROM gradle:8.5-jdk21-alpine

WORKDIR /app

# Install useful dev tools
RUN apk add --no-cache curl wget

# Copy Gradle files
COPY build.gradle.kts settings.gradle.kts ./
COPY gradle ./gradle
COPY gradlew ./

# Download dependencies
RUN ./gradlew dependencies --no-daemon

# Copy source code
COPY src ./src

EXPOSE 8080 5005

# Run with hot reload and debug enabled
CMD ["./gradlew", "bootRun", "--no-daemon", "--args='--spring.profiles.active=dev'"]
